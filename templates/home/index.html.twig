{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto text-center py-10">
        <h1 class="text-4xl font-bold text-blue-600">Bienvenue sur Site-Ecommerce.name</h1>
        <p class="text-gray-700 mt-4 text-lg">Nouveautés :</p>
    </div>

    <!-- Section des articles -->
    <div class="container mx-auto px-6">
        {% if articles is empty %}
            <p class="text-center text-gray-600">Aucun article disponible pour le moment.</p>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
                {% for article in articles %}
                    <div class="bg-white shadow-md rounded-lg p-4">
                        <img src="{{ article.image }}" alt="{{ article.name }}" class="w-full h-40 object-cover rounded-md">
                        <h2 class="text-lg font-semibold mt-2">{{ article.name }}</h2>
                        <p class="text-gray-600 text-sm">{{ article.description|slice(0, 100) }}...</p>
                        <p class="text-blue-600 font-bold mt-2">{{ article.price }} €</p>
                        <a href="{{ path('app_article_detail', { 'id': article.id }) }}" 
                class="mt-3 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                Voir le produit
</a>

                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
