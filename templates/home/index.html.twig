{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto text-center py-10">
    <h1 class="text-4xl font-bold text-customWhite font-oxanium">Bienvenue sur TECHNOVA.COM</h1>
    <p class="text-customWhite font-oxanium mt-4 text-lg">Nouveautés :</p>

</div>
<div class="bg-customRed text-customWhite font-oxanium text-center p-4">
Ceci est un test Tailwind !
</div>

<!-- Section des articles -->
<div class="container mx-auto px-6">
    <!--% if articles is empty %}-->
        <p class="text-center text-customWhite font-oxanium">Aucun article disponible pour le moment.</p>

    <!--% else %}-->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            <!--% for article in articles %}-->
                <div class="bg-customRed shadow-md rounded-lg p-4 text-customWhite font-oxanium">
                    <img src="{{ asset('images/technova.png') }}" alt="" class="w-full h-40 object-cover rounded-md"><!-- src="{ article.image } alt="{ article.name }" -->
                    <div class="flex flex-col space-y-1">
                        <p class="text-xl font-semibold mt-2">{ article.name }</p><!---->
                        <p class="text-sm">{ article.description|slice(0, 100) }...</p><!---->
                        <p class="text-lg">{ article.price } €</p><!---->
                    </div>
                    <a href="" 
                        class="mt-3 inline-block bg-bodyColor text-white px-4 py-2 rounded hover:bg-[#494949] transition duration-150">
                        Voir le produit</a><!-- href="{ path('app_article_detail', { 'id': article.id }) }} -->

                </div>
            <!--% endfor %}-->
        </div>
    <!--% endif %}-->
</div>
{% endblock %}
