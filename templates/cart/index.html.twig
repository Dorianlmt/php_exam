{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container mx-auto p-6 max-w-md">
    <!-- Bouton retour -->
    <a href="{{ path('app_home') }}" class="flex items-center text-gray-700 hover:text-gray-900">
        <div class="w-10 h-10 flex items-center justify-center rounded-full border border-gray-400">
            <i class="fas fa-arrow-left text-xl"></i>
        </div>
    </a>

   {% for item in cartItems %}
        <div class="bg-white shadow-md rounded-lg p-4 mb-4 flex justify-between items-center">
            <img src="{{ item.id_article.image }}" alt="{{ item.id_article.name }}" class="w-24 h-24 object-cover rounded-md">
            <div>
                <h2 class="text-lg font-semibold">{{ item.id_article.name }}</h2>
                <p class="text-gray-600">{{ item.id_article.price }} €</p>
            </div>
        </div>
    {% else %}
        <p class="text-center text-gray-600">Votre panier est vide.</p>
    {% endfor %}
    
            <a href="{{ path('app_login') }}" class="px-4 py-2 border rounded-full text-gray-700 hover:bg-gray-200">
                Login
            </a>
            <a href="{{ path('app_home') }}" class="px-4 py-2 border rounded-full text-white bg-blue-600 hover:bg-blue-700">
                Start Shopping
            </a>
        </div>
    </div>

    <!-- Section Articles sauvegardés -->
    <div class="bg-white shadow-md rounded-lg p-6 mt-6">
        <p class="text-lg font-semibold text-center">Articles sauvegardés</p>
        <!-- Ici on pourra afficher les articles sauvegardés -->
    </div>
</div>
{% endblock %}
