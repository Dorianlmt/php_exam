{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}


{% block body %}

{% include '_components/_returnButton.html.twig' %}

<div class="flex flex-col m-auto place-items-center space-y-6">

    <!-- Section Affichage Articles -->

    <div class="w-3/4 bg-customRed shadow-md rounded-md flex flex-col m-auto place-items-center mt-6 p-4">
        <p class="text-3xl font-semibold font-oxanium text-customWhite ">Mon panier</p>
        <p class="text-white text-xs">↓--lorsqu'il n'y a pas d'articles--↓</p><!-- à supprimer -->
        <div class="flex flex-col place-items-center p-3 space-y-2">
            <!--% if articles is empty %}-->
                <p class="text-lg text-center text-customWhite font-oxanium">Votre panier est vide</p>
            <!--% endif %}-->
            <a href="{{ path('app_home') }}" class="text-lg text-center text-customWhite underline font-oxanium"><p>Commencez vos achats</p></a>
        </div>
    </div>


    <p class="text-white text-xs text-center">↓--lorsqu'il y a des articles dans le panier--↓</p><!-- à supprimer -->


    <!--% if cartItems is empty %} ****************************************************************************** -->

    
        <div class="w-3/4 flex flex-col md:flex-row place-items-center space-y-4 md:space-y-0 md:space-x-4">
        <!--% for item in cartItems %}-->
            <div class=" bg-customRed shadow-md rounded-lg p-4 text-customWhite font-oxanium w-full">
                <img src="{{ asset('images/technova.png') }}" alt="" class="w-full h-40 object-cover rounded-md"><!-- src="{ article.image } alt="{ article.name }" -->
                <div class="flex flex-col space-y-1">
                    <p class="text-xl font-semibold mt-2">{ article.name }</p>
                    <p class="text-sm">{ article.description|slice(0, 100) }...</p>
                    <p class="text-lg">{ article.price } €</p>
                </div>
                <a href="" 
                    class="mt-3 inline-block bg-bodyColor text-white px-4 py-2 rounded hover:bg-[#494949] transition duration-150">
                    Voir le produit</a><!-- href="{ path('app_article_detail', { 'id': article.id }) }} -->
            </div>
        </div>
        <!-- % endfor %} -->

        <!-- Bouton Paiement -->
        <div class="bg-customRed rounded-md border-2 border-customWhite p-2">
            <a href="{{ path('app_cart_validate') }}" class="text-customWhite font-oxanium">Passer au paiement</a>
        </div>
    <!--% endif %}******************************************************************************************-->

</div>
{% endblock %}
