{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mx-auto p-6 max-w-md">
    <div class="bg-white shadow-md rounded-lg p-6 mt-6 text-center">
        <p class="text-lg font-semibold">Se connecter</p>

        {% for message in app.flashes('error') %}
            <p class="text-red-500 bg-red-100 border border-red-400 p-3 rounded mt-3">{{ message }}</p>
        {% endfor %}

        <form action="{{ path('app_login') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> 

            <p class="my-2 text-lg">Votre Email:</p>
            <input type="email" name="email" class="border border-blue-600 mb-3 w-full p-2" required>

            <p class="my-2 text-lg">Mot de passe:</p>
            <input type="password" name="password" class="border border-blue-600 mb-3 w-full p-2" required>

            <br/>
            <input type="submit" value="Se connecter" class="
                px-4 py-2 my-3
                border rounded-full bg-blue-600 hover:bg-blue-700
                text-white cursor-pointer">
        </form>

        <p class="text-base">Vous n'avez pas de compte ?</p>
        <a href="{{ path('app_signup') }}" class="text-base text-blue-600">Inscrivez-vous</a>
    </div>
</div>
{% endblock %}
