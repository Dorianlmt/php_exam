<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Site Symfony{% endblock %}</title>

    <!-- Font Awesome pour les icônes -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js" crossorigin="anonymous"></script>


    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body class="bg-gray-100 text-gray-900 flex flex-col min-h-screen">

    <!-- Header fixe en haut -->
    <header class="bg-blue-600 text-white fixed top-0 w-full py-4 shadow-md">
    <nav class="container mx-auto flex items-center justify-between px-6">
        <!-- Liens du menu -->
        <div class="flex space-x-6">
            <a href="{{ path('app_home') }}" class="hover:underline">Accueil</a>
            <a href="#" class="hover:underline">À propos</a>
        </div>

        <!-- Icônes utilisateur et panier alignées à droite -->
        <div class="flex space-x-6 ml-auto">
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_profile') }}" class="text-white hover:text-gray-300 transform scale-100 hover:scale-110 transition duration-200">
        <i class="fas fa-user text-xl"></i> <!-- Icône utilisateur -->
        </a>
        {% else %}
        <a href="{{ path('app_login') }}" class="text-white hover:text-gray-300 transform scale-100 hover:scale-110 transition duration-200">
        <i class="fas fa-user text-xl"></i> <!-- Icône utilisateur -->
        </a>
{% endif %}

            <a href="{{ path('app_cart') }}" class="text-white transform scale-100 hover:scale-110 transition duration-200">
                <i class="fas fa-shopping-cart text-xl"></i> <!-- Icône panier -->
            </a>
        </div>
    </nav>
</header>


    
    <main class="container mx-auto mt-20 flex-grow">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer collé en bas de la page -->
    <footer class="bg-gray-800 text-white text-center py-4 mt-10 w-full">
        <p>&copy; {{ "now"|date("Y") }} - Mon Site Symfony</p>
    </footer>

</body>
</html>